# Database Configuration
MONGODB_URI=mongodb://localhost:27017/line_chat_summarizer
MONGODB_DB_NAME=line_chat_summarizer
# For MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/line_chat_summarizer

# LINE Official Account Configuration
LINE_CHANNEL_ID=your_line_channel_id
LINE_CHANNEL_SECRET=your_line_channel_secret
LINE_CHANNEL_ACCESS_TOKEN=your_line_access_token

# Google Gemini AI Configuration
GEMINI_API_KEY=your_gemini_api_key

# Server Configuration
PORT=3001
WEBHOOK_URL=https://your-domain.com/webhook/line

# Security
ENCRYPTION_KEY=your_32_character_encryption_key_here
JWT_SECRET=your_jwt_secret_key
BETTER_AUTH_SECRET=your_better_auth_secret_key
SESSION_SECRET=your_session_secret_key

# Frontend/Backend URLs (for CORS and API)
FRONTEND_URL=http://localhost:3000
BACKEND_URL=http://localhost:3001
CORS_ORIGIN=http://localhost:3000

# Environment
NODE_ENV=development

# Optional: Railway/Deployment
RAILWAY_STATIC_URL=your_railway_url_if_using_railway

# Logging
LOG_LEVEL=info